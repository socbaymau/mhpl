    </form>
    <table class="table table-bordered table-hover table-loaiveso-noidung">
        <tr style="background-color:#abebe2">
            <th>Mã kết quả</th>
            <th>Loại vé số</th>
            <th>Giải</th>
            <th>Số trúng</th>
            <th>Ngày</th>
            <th style="width: 50px;"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaKq</td>
                <td>@item.MaLvsNavigation.Tinh</td>
                <td>@item.MaGiaiNavigation.TenGiai</td>
                <td>@item.SoTrung</td>
