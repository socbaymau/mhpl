@model IEnumerable<HDCT>
@using User.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeftMenu.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thông tin hoá đơn</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="col-lg-12">
    <div class="panel panel-default">
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <!--------------------------------------------- Search And Add ------------------------------------------------->
                    <div class="form-group">
                        @using (Html.BeginForm("Index", "ThongTinHoaDon", FormMethod.Get))
                        {
                            <label>Nhập Số điện thoại:</label>
                            <input type="text" , name="sdt">
                            <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
                        }
                    </div>
                    <!------------------------------------------- Loading Edit Delete ----------------------------------------------->
                    <thead>
                        <tr>
                            <th>Mã HDCT</th>
                            <th>Số điện thoại</th>
                            <th>Số tiền thanh toán</th>
                            <th>Trạng thái</th>
                            <th>Ngày</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MAHDCT</td>
                                <td>@item.IDSIM</td>
                                <td>@item.TONGTIEN</td>
                                <td>@item.TRANGTHAI</td>
                                <td>@item.Ngay</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

